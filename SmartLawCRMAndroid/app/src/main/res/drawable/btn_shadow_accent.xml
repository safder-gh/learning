<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <gradient android:angle="270" android:centerColor="@color/secondaryColor" android:endColor="@color/secondaryDarkColor" android:startColor="@color/secondaryLightColor"></gradient>
                    <corners android:radius="5dp" />
                </shape>
            </item>
            <item android:bottom="2dp">
                <shape>
                    <gradient android:angle="270" android:centerColor="@color/secondaryColor" android:endColor="@color/secondaryLightColor" android:startColor="@color/secondaryLightColor"></gradient>
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                    <corners android:radius="5dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true"><layer-list>

        <item android:top="3dp"><shape>
            <gradient android:angle="270" android:centerColor="@color/secondaryLightColor" android:endColor="@color/secondaryColor" android:startColor="@color/secondaryColor"></gradient>

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />

            <corners android:radius="5dp" />
        </shape></item>
    </layer-list></item>

</selector>